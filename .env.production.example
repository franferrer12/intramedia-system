# ============================================
# IntraMedia System - Production Environment
# ============================================
# 
# IMPORTANT: Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to version control
#

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=intra_media_system
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Backend Configuration
NODE_ENV=production
PORT=3001

# JWT Secret (CRITICAL: Generate a strong secret)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_STRONG_JWT_SECRET

# Instagram OAuth
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=https://yourdomain.com/api/oauth/instagram/callback

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=IntraMedia System <noreply@yourdomain.com>

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=https://api.yourdomain.com

# Optional: Redis (for production caching)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_newrelic_key

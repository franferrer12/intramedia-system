# PostgreSQL host (use 'localhost' for local development)
DB_HOST=localhost

# PostgreSQL port (default is 5432)
DB_PORT=5432

# Database name
DB_NAME=intra_media_system

# Database user with appropriate permissions
# SECURITY: Use a dedicated user, NOT 'postgres' superuser
DB_USER=intra_media_user

